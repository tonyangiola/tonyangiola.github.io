  document.querySelectorAll(".books .book-card a.btn").forEach(a=>{
    const text = (a.textContent||"").trim().toLowerCase();
    if (/\bbuy\b/.test(text)) {
      ["display","opacity","visibility","transform","filter","background","color","border","padding","border-radius","z-index"]
        .forEach(prop=>a.style.removeProperty(prop));
      a.style.setProperty("display","inline-flex","important");
      a.style.setProperty("background","#2563eb","important");
      a.style.setProperty("color","#fff","important");
      a.style.setProperty("border","1px solid #1e4fd3","important");
      a.style.setProperty("padding",".65rem 1.1rem","important");
      a.style.setProperty("border-radius","9999px","important");
      a.style.setProperty("opacity","1","important");
      a.style.setProperty("visibility","visible","important");
      a.style.setProperty("transform","none","important");
      a.style.setProperty("filter","none","important");
      a.classList.remove("ghost","btn-outline","hidden","sr-only");
      a.removeAttribute("aria-hidden");
      });

  // 2) Remove any lingering titles/captions near media (brute-force fallback)
  document.querySelectorAll(".books .book-card").forEach(card=>{
    card.querySelectorAll("figcaption,.video-title,.caption").forEach(n=>n.remove());
    const media = card.querySelector(".book-video, .book-media, figure, picture, video, img");
    if (media){
      let n = media.nextElementSibling, steps = 0;
      const killTag = (el)=>["FIGCAPTION","H3","H4","P","DIV","SPAN"].includes(el.tagName);
      const killText = (t)=>/^(title|trailer|caption)i.test(t.trim());
      while(n && steps < 6){
        const txt = (n.textContent||"").slice(0,60);
        if (killTag(n) && (/(video|media|caption|title)/i.test(n.className||"") || killText(txt))){
          const rem = n; n = n.nextElementSibling; rem.remove(); steps++; continue;
                n = n.nextElementSibling; steps++;
            });
});
</script>

<script id="snippy-blue-js">
  (function(){
    function blue(el){
      if(!el) return;
      el.classList.remove("ghost","btn-ghost");
      el.style.display = "inline-flex";
      el.style.background = "#2563eb";
      el.style.color = "#fff";
      el.style.border = "1px solid #1e4fd3";
      el.style.padding = ".6rem 1rem";
      el.style.borderRadius = "9999px";
        function light(el){
      if(!el) return;
      el.classList.add("ghost");
      el.style.display = "inline-flex";
      el.style.background = "#f3f4f6";
      el.style.color = "#111";
      el.style.border = "1px solid #d1d5db";
      el.style.padding = ".6rem 1rem";
      el.style.borderRadius = "9999px";
        function fix(){
      document.querySelectorAll(".books .book-card").forEach(function(card){
        if(!/Snippy/i.test(card.textContent)) return;
        var row = card.querySelector(".book-actions, .buttons");
        if(!row) return;
        var btns = Array.from(row.querySelectorAll("a,button")).filter(Boolean);
        if(btns.length){ blue(btns[0]);         if(btns.length>1){ light(btns[1]);       });
        if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", fix);
    } else {
      fix();
      })();
</script>
