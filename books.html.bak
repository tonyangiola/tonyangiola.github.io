<script id="books-endcap-js-20251029-173315" defer>
document.addEventListener("DOMContentLoaded", function(){
  // 1) Brighten any BUY button: detect by visible text containing "buy"
  document.querySelectorAll(".books .book-card a.btn").forEach(a=>{
    const t = (a.textContent||"").trim().toLowerCase();
    if (/\bbuy\b/.test(t)) {
      a.style.setProperty("display","inline-flex","important");
      a.style.setProperty("opacity","1","important");
      a.style.setProperty("visibility","visible","important");
      a.style.setProperty("background","#2563eb","important");  // bright blue
      a.style.setProperty("color","#fff","important");
      a.style.setProperty("border","1px solid #1e4fd3","important");
      a.style.setProperty("padding",".6rem 1rem","important");
      a.style.setProperty("border-radius",".6rem","important");
      a.style.setProperty("z-index","25","important");
      a.classList.remove("hidden","sr-only");
      a.removeAttribute("aria-hidden");
      });

  // 2) Remove stubborn titles/captions including siblings after media
  document.querySelectorAll(".books .book-card").forEach(card=>{
    card.querySelectorAll("figcaption,.video-title,.caption,.book-media .title,.book-video .title").forEach(n=>n.remove());
    const media = card.querySelector(".book-video, .book-media, figure, picture, video, img");
    if (media){
      let n = media.nextElementSibling, hops=0;
      const kill = (el)=> {
        const cls=(el.className||"");
        const txt=(el.textContent||"").trim().toLowerCase();
        if (/(video|media|caption|title)/i.test(cls)) return true;
        if (/^(trailer|title|caption)i.test(txt)) return true;
        if (txt.length && txt.length<=40 && /video|trailer|title|caption/.test(txt)) return true;
        return false;
      };
      while(n && hops<6){
        if (["FIGCAPTION","H3","H4","P","DIV","SPAN"].includes(n.tagName) && kill(n)) {
          const rem=n; n=n.nextElementSibling; rem.remove(); hops++; continue;
                n = n.nextElementSibling; hops++;
            });
});
</script>



<script id="books-buy-fix-js-20251029-174822" defer>
